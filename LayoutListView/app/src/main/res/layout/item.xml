<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        android:background="#ffffffff"
        android:layout_margin="10dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/common_action_bar_splitter"
        android:elevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_photo"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="139dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_title"
                android:textSize="10dp"
                android:text="Miriam Lischke"
                android:layout_below="@+id/product_photo"
                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price"
                android:layout_marginTop="95dp"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_id"
                android:text="25 years old"
                android:layout_alignTop="@+id/product_title"
                android:layout_alignLeft="@+id/product_title"
                android:layout_alignStart="@+id/product_title"
                android:layout_marginTop="47dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_price"
                android:text="25 years old"
                android:layout_below="@+id/product_id"
                android:layout_toLeftOf="@+id/product_photo"
                android:layout_toStartOf="@+id/product_photo"
                android:layout_marginTop="14dp" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>