    package="com.lischke.miriam.layoutexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flocken_weiss_rot"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">
        <activity
            android:name=".StartMenue"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FullCardLayout" />
        <activity android:name=".ListCardLayout" />
        <activity android:name=".Gridlayout" />
        <activity android:name=".StaggerdGridLayout"></activity>
    </application>

</manifest>